ifeq ($(OS),Windows_NT)
  OS := Windows_NT
else
  OS := $(shell uname -s)
endif

all: manifest
manifest:
	@kotlinc StreamProcessing.kt -include-runtime -d StreamProcessing.jar
	@rm -rf StreamProcessing
gradle:
	@gradle -q standalone
ifeq ($(OS),Windows_NT)
	@move "build\libs\StreamProcessing.jar" .
	@rd /s /q build
	@rd /s /q .gradle
else
	@mv build/libs/StreamProcessing.jar .
	@rm -rf build .gradle
endif
clean:
	@rm StreamProcessing.jar
