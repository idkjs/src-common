ifeq ($(OS),Windows_NT)
  OS := Windows_NT
else
  OS := $(shell uname -s)
endif

all: mono

Windows_NT:
	@csc /nologo /t:exe /out:pi_calculate.exe pi_calculate.cs
mono:
ifeq ($(OS),FreeBSD)
	@mcs -t:exe -out:pi_calculate.exe pi_calculate.cs
endif
ifeq ($(OS),Linux)
	@mcs -t:exe -out:pi_calculate.exe pi_calculate.cs
endif
vstudio:
	@devenv pi_calculate.sln /build release
	@rd /S /Q obj
	-@if exist *.obj del *.obj > nul
core:
	@dotnet
clean:
	@rm pi_calculate.exe
